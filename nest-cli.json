{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/api-gateway/src",
  "monorepo": true,
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": ["**/*.proto"],
    "watchAssets": true
  },
  "projects": {
    "api-gateway": {
      "type": "application",
      "root": "apps/api-gateway",
      "entryFile": "main",
      "sourceRoot": "apps/api-gateway/src",
      "compilerOptions": {
        "tsConfigPath": "apps/api-gateway/tsconfig.build.json",
        "assets": [
          {
            "include": "**/*.proto",
            "outDir": "dist/apps/scheduling-service"
          }
        ]
      }
    },
    "scheduling-service": {
      "type": "application",
      "root": "apps/scheduling-service",
      "entryFile": "main",
      "sourceRoot": "apps/scheduling-service/src",
      "compilerOptions": {
        "tsConfigPath": "apps/scheduling-service/tsconfig.build.json",
        "assets": [
          {
            "include": "**/*.proto",
            "outDir": "dist/apps/scheduling-service"
          }
        ]
      }
    },
    "common": {
      "type": "library",
      "root": "libs/common",
      "entryFile": "index",
      "sourceRoot": "libs/src",
      "compilerOptions": {
        "tsConfigPath": "libs/common/tsconfig.lib.json",
        "assets": ["**/*.proto"]
      }
    }
  }
}
